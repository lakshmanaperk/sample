<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.perk.perksdk.sdkwidget.LearnMoreActivity"
    android:background="#F4F4F4">


    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/close_learn_more"
        android:layout_alignParentEnd="false"
        android:contentDescription="@string/descriptor_close_dialog"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:id="@+id/img_points_to_cash"
        android:contentDescription="@string/descriptor_points_to_cash"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/dialog_learn_more_header"
        android:id="@+id/learn_more_headline"
        android:layout_below="@+id/img_points_to_cash"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="#429F41"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dialog_learn_more_description_1"
        android:id="@+id/description_text_1"
        android:layout_below="@+id/learn_more_headline"
        android:layout_centerHorizontal="true"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:singleLine="false"
        android:gravity="center"
        android:paddingTop="10dp"
        android:textColor="#565757" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/dialog_learn_more_description_2"
        android:id="@+id/description_text_2"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:singleLine="false"
        android:gravity="center"
        android:paddingTop="10dp"
        android:layout_below="@+id/description_text_1"
        android:layout_centerHorizontal="true"
        android:textColor="#565757" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_learn_more"
        android:layout_below="@+id/description_text_2"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:contentDescription="@string/descriptor_learn_more_button"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_close_learn_more"
        android:id="@+id/btn_close"
        android:layout_below="@+id/btn_learn_more"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:padding="10sp"
        android:textAlignment="center" />

</RelativeLayout>
