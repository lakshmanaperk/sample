<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
              android:id="@+id/main"
                    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:id="@+id/subleft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="10">
            <LinearLayout
                android:id="@+id/loggedin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical"
                android:background="@drawable/border_rect"
                android:layout_margin="3dp"
                android:weightSum="10"
                android:layout_weight="6">
                <ImageView
                    android:id="@+id/user_image"
                    android:layout_weight="3"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/border_rect"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:id="@+id/user_name"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/user_email"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/user_points"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/user_ppoints"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/user_id"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/user_status_loggedin"
                        android:text="Logout User"
                        android:background="@drawable/button_rect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        />
                    <ImageView
                        android:id="@+id/user_status_in"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/userinfo"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/loggedout_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="3dp"
                android:visibility="gone"
                android:background="@drawable/border_rect"
                android:weightSum="10"
                android:layout_weight="6">
                <TextView
                    android:id="@+id/no_user_info"
                    android:layout_width="wrap_content"
                    android:text="No User Info"
                    android:textSize="20sp"
                    android:layout_weight="3"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Login For"
                    android:textSize="30sp"
                    android:layout_weight="2.5"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="User Info"
                    android:textSize="30sp"
                    android:layout_weight="2.5"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                <Button
                    android:id="@+id/user_status_logggedout"
                    android:text="Login User"
                    android:layout_width="wrap_content"
                    android:background="@drawable/button_rect"
                    android:layout_height="wrap_content"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_margin="3dp"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    />
                    <ImageView
                        android:id="@+id/user_status_out"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/userinfo"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sdkstatus"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/border_rect"
                android:weightSum="2"
                android:layout_weight="2">
                <TextView
                    android:id="@+id/sdk_status_text"
                    android:text="SDK Disabled"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Switch
                    android:id="@+id/sdk_status_switch"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:thumb="@drawable/customswitchselector"
                    android:track="@drawable/custom_track"
                    android:switchTextAppearance="@style/SwitchTextAppearance"
                    android:thumbTextPadding="5dp"
                    android:paddingBottom="2dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/events"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:weightSum="3"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"
                    android:textSize="15dp"
                    android:text="Achievements"/>
                <Button
                    android:id="@+id/tap_once"
                    android:text="Tap Once"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_margin="3dp"
                    android:padding="5dp"
                    android:background="@drawable/button_rect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/tap_twice"
                    android:text="Tap Twice (Custom)"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_margin="3dp"
                    android:padding="5dp"
                    android:background="@drawable/button_rect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/tap_thrice"
                    android:text="Tap Thrice"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:layout_margin="3dp"
                    android:padding="5dp"
                    android:background="@drawable/button_rect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/subright"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="9">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginBottom="5dp"
                        android:text="Portal Pages"/>
                    <Button
                        android:id="@+id/portal_page"
                        android:text="Portal Page"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:background="@drawable/button_rect"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/unclaimed_page"
                        android:text="Unclaimed Page"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:background="@drawable/button_rect"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/rewards_page"
                        android:text="Rewards Page"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:background="@drawable/button_rect"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"
                    android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textSize="15dp"
                        android:text="Other Fetchable Data"/>
                    <Button
                        android:id="@+id/unclaimed_count"
                        android:text="Unclaimed Count"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:background="@drawable/button_rect"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/supported_countries"
                        android:text="Supported Countries"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:background="@drawable/button_rect"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/publisher_balance"
                        android:text="Publisher Balance"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:background="@drawable/button_rect"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="-8dp"
                    android:layout_weight="2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textSize="15dp"
                        android:text="Serving Ads"/>
                    <Button
                        android:id="@+id/show_ad"
                        android:text="Show Ad"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:background="@drawable/button_rect"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/show_survey"
                        android:text="Show Survey"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:background="@drawable/button_rect"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/show_two_ads"
                        android:text="Show 2 Ads"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:background="@drawable/button_rect"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/show_three_ads_load"
                        android:text="Show 3 Ads W/Loader"
                        android:layout_gravity="center_horizontal"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:background="@drawable/button_rect"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/border"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#87CEFA">
    </LinearLayout>
        <ScrollView
            android:id="@+id/log_container"
            android:layout_width="match_parent"
            android:layout_below="@+id/border"
            android:background="#FFFFFF"
            android:padding="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/sdk_event_log"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>